<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location Data</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        h1 { text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 10px; border: 1px solid #ddd; text-align: center; }
        th { background-color: #f2f2f2; }
    </style>
</head>
<body>

    <h1>Location Data Analysis</h1>

    <h2>Count per Type</h2>
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            <% for (const type in typeCount) { %>
                <tr>
                    <td><%= type %></td>
                    <td><%= typeCount[type] %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h2>Average Rating per Type</h2>
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Average Rating</th>
            </tr>
        </thead>
        <tbody>
            <% for (const type in typeAvgRating) { %>
                <tr>
                    <td><%= type %></td>
                    <td><%= typeAvgRating[type].toFixed(2) %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h2>Location with Highest Number of Reviews</h2>
    <% if (topLocation) { %>
        <p><strong><%= topLocation.id %></strong> has <strong><%= topLocation.reviews %></strong> reviews.</p>
    <% } else { %>
        <p>No location data available.</p>
    <% } %>

    <h2>Incomplete Data Locations</h2>
    <% if (incompleteData.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Type</th>
                    <th>Rating</th>
                    <th>Reviews</th>
                </tr>
            </thead>
            <tbody>
                <% incompleteData.forEach(loc => { %>
                    <tr>
                        <td><%= loc.id %></td>
                        <td><%= loc.latitude %></td>
                        <td><%= loc.longitude %></td>
                        <td><%= loc.type %></td>
                        <td><%= loc.rating %></td>
                        <td><%= loc.reviews %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No incomplete data found.</p>
    <% } %>

</body>
</html>
